<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemePurple" parent="AppTheme">
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryDark">#7B1FA2</item>
        <item name="colorAccent">#7C4DFF</item>
        <item name="colorOnBackground">@color/colorBackgroundLight</item>
        <item name="menuIconTint">@color/colorIconInLight</item>
        <item name="menuTextColor">@color/colorIconInLight</item>
    </style>

    <style name="AppThemeDark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryDark">#7B1FA2</item>
        <item name="colorAccent">#7C4DFF</item>
        <item name="colorOnBackground">@color/colorBackgroundDark</item>
        <item name="menuIconTint">@color/colorIconInDark</item>
        <item name="menuTextColor">@color/colorIconInDark</item>
    </style>

    <style name="FullScreenTheme" parent="AppThemePurple" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:colorBackground">@color/splash_background</item>
    </style>

    <style name="MenuIconTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/menu_item_margin</item>
        <item name="android:layout_marginBottom">@dimen/menu_item_margin</item>
        <item name="android:tint">?attr/menuIconTint</item>
    </style>

    <style name="MenuTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/menu_item_margin</item>
        <item name="android:textColor">?attr/menuTextColor</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CircularProgress" parent="AppThemePurple">
        <item name="colorAccent">?attr/colorPrimaryDark</item>
    </style>

    <style name="MenuColor" parent="AppThemePurple">
        <item name="tint">?attr/colorPrimaryDark</item>
    </style>

    <style name="AnimationDrawableStyle">
        <item name="android:layout_width">@dimen/anim_screen_width</item>
        <item name="android:layout_height">@dimen/anim_screen_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/anim_screen_margin_bottom</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- BottomSheet style-->
    <style name="AppShapeAppearance.LargeComponent"
        parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>
